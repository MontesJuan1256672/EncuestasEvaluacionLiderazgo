@model EncuestasEvaluacionLiderazgo.Models.EncuestaDetailsViewModel

@{
    ViewData["Title"] = @Model.Encuesta.Titulo;
}

<div class="max-w-4xl mx-auto py-8">
    <!-- Encabezado de la Encuesta -->
    <div class="bg-white rounded-lg shadow-md p-8 mb-8 border-l-4 border-blue-600">
        <div class="flex justify-between items-start mb-4">
            <div>
                <h1 class="text-4xl font-bold text-gray-900 mb-2">@(new EncuestasEvaluacionLiderazgo.Views.Encuesta.DetailsModel().GetTituloEncuesta(Model.FiltroTipo))</h1>
                <p class="text-gray-600 text-lg">@Model.Encuesta.Descripcion</p>
            </div>
            <span class="@Model.GetEstadoClase(Model.Encuesta.Estado) text-sm font-bold px-4 py-2 rounded-full">
                @Model.GetEstadoTexto(Model.Encuesta.Estado)
            </span>
        </div>

        <!-- Info de la Encuesta -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mt-6 pt-6 border-t">
            <div>
                <p class="text-gray-600 text-sm">Creada el</p>
                <p class="font-bold text-gray-900">@Model.Encuesta.FechaCreacion.ToString("dd/MM/yyyy")</p>
            </div>
            <div>
                <p class="text-gray-600 text-sm">Vencimiento</p>
                <p class="font-bold text-gray-900">@Model.Encuesta.FechaVencimiento.ToString("dd/MM/yyyy")</p>
            </div>
            <div>
                <p class="text-gray-600 text-sm">Preguntas</p>
                <p class="font-bold text-gray-900">@Model.Encuesta.Preguntas?.Count ?? 0</p>
            </div>
            <div>
                <p class="text-gray-600 text-sm">Respuestas</p>
                <p class="font-bold text-gray-900">@Model.Encuesta.Respuestas?.Count ?? 0</p>
            </div>
        </div>
    </div>

    <!-- Formulario de Respuestas -->
    @if (Model.Encuesta.Estado == EncuestasEvaluacionLiderazgo.Models.EstadoEncuesta.Publicada)
    {
        var detailsModel = new EncuestasEvaluacionLiderazgo.Views.Encuesta.DetailsModel();
        var preguntasDataSet = detailsModel.ObtenerPreguntasDeBaseDatos(Model.FiltroTipo);
        <form method="post" asp-action="Submit" asp-controller="Encuesta" asp-route-encuestaId="@Model.Encuesta.Id" asp-route-filtroTipo="@Model.FiltroTipo">
            <div class="space-y-8">
                @if (detailsModel.TienePreguntasEnDataSet(preguntasDataSet))
                {
                    @foreach (var filaPregunта in detailsModel.ObtenerFilasPreguntasOrdenadas(preguntasDataSet))
                    {
                        <div class="bg-white rounded-lg shadow-md p-8 border-l-4 border-gray-300">
                            <!-- Número y Título de la Pregunta -->
                            <div class="mb-6">
                                <div class="flex items-start space-x-4">
                                    <span class="flex-shrink-0 inline-flex items-center justify-center h-8 w-8 rounded-full bg-blue-100 text-blue-600 font-bold">
                                        @detailsModel.ObtenerNumeroPregunta(filaPregunта)
                                    </span>
                                    <div class="flex-1">
                                        <h3 class="text-lg font-bold text-gray-900">
                                            @detailsModel.ObtenerTextoPregunta(filaPregunта)
                                        </h3>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="text-center py-12 bg-gray-100 rounded-lg">
                        <p class="text-gray-600">Esta encuesta aún no tiene preguntas</p>
                    </div>
                }
            </div>

            <!-- Botones de Acción -->
            <div class="flex space-x-4 mt-12">
                <button type="submit" class="flex-1 bg-green-600 text-white py-3 rounded-lg hover:bg-green-700 transition font-bold text-lg">
                    ✓ Enviar Encuesta
                </button>
                <a asp-action="Index" class="flex-1 bg-gray-300 text-gray-800 py-3 rounded-lg hover:bg-gray-400 transition font-bold text-lg text-center">
                    ← Volver
                </a>
            </div>
        </form>
    }
    else
    {
        <!-- Encuesta no disponible -->
        <div class="bg-yellow-100 border-l-4 border-yellow-600 text-yellow-800 p-6 rounded-lg">
            <p class="font-bold text-lg">⚠️ Encuesta no disponible</p>
            <p class="mt-2">Esta encuesta se encuentra en estado: <strong>@Model.GetEstadoTexto(Model.Encuesta.Estado)</strong></p>
            <p class="mt-2">Por favor contacta al administrador si crees que esto es un error.</p>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Validaciones adicionales si es necesario
    </script>
}
