@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">📊 Evaluación de Liderazgo</h1>
    <p class="lead text-gray-600 mt-4">Plataforma integral para evaluar competencias de liderazgo en tu organización</p>
    
    <div class="grid md:grid-cols-3 gap-6 mt-12">
        <!-- Para Administradores -->
        <div class="bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition">
            <div class="text-4xl mb-4">👨‍💼</div>
            <h3 class="text-xl font-bold text-gray-900 mb-2">Administradores</h3>
            <p class="text-gray-600 mb-4">Crea y gestiona encuestas, publica evaluaciones y analiza resultados de tu equipo</p>
            <a asp-controller="Encuesta" asp-action="Index" class="inline-block bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition">
                Ir a Encuestas
            </a>
        </div>
        
        <!-- Para Evaluadores -->
        <div class="bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition">
            <div class="text-4xl mb-4">📋</div>
            <h3 class="text-xl font-bold text-gray-900 mb-2">Evaluadores</h3>
            <p class="text-gray-600 mb-4">Responde encuestas de evaluación y proporciona feedback sobre competencias de liderazgo</p>
            <a asp-controller="Encuesta" asp-action="Index" class="inline-block bg-green-600 text-white px-4 py-2 rounded-lg hover:bg-green-700 transition">
                Responder Encuestas
            </a>
        </div>
        
        <!-- Características -->
        <div class="bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition">
            <div class="text-4xl mb-4">✨</div>
            <h3 class="text-xl font-bold text-gray-900 mb-2">Características</h3>
            <p class="text-gray-600 mb-4">Múltiples tipos de preguntas, análisis de resultados y generación de reportes</p>
            <a href="#features" class="inline-block bg-purple-600 text-white px-4 py-2 rounded-lg hover:bg-purple-700 transition">
                Conocer más
            </a>
        </div>
    </div>
    
    <!-- Información adicional -->
    <div class="mt-12 bg-blue-50 p-8 rounded-lg">
        <h2 class="text-2xl font-bold text-gray-900 mb-4">¿Cómo funciona?</h2>
        <div class="grid md:grid-cols-3 gap-6 text-left">
            <div>
                <div class="bg-blue-600 text-white rounded-full w-12 h-12 flex items-center justify-center font-bold mx-auto mb-3">1</div>
                <h4 class="font-bold text-gray-900 mb-2">Crear Encuesta</h4>
                <p class="text-gray-600">Los administradores crean encuestas personalizadas con diferentes tipos de preguntas</p>
            </div>
            <div>
                <div class="bg-blue-600 text-white rounded-full w-12 h-12 flex items-center justify-center font-bold mx-auto mb-3">2</div>
                <h4 class="font-bold text-gray-900 mb-2">Publicar</h4>
                <p class="text-gray-600">Publican la encuesta para que los evaluadores puedan acceder a ella</p>
            </div>
            <div>
                <div class="bg-blue-600 text-white rounded-full w-12 h-12 flex items-center justify-center font-bold mx-auto mb-3">3</div>
                <h4 class="font-bold text-gray-900 mb-2">Analizar</h4>
                <p class="text-gray-600">Recopilan respuestas y generan análisis sobre competencias de liderazgo</p>
            </div>
        </div>
    </div>
</div>
